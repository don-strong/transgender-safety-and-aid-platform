<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.transsafety.UserQueryController">

    <!-- BACK BUTTON -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Back to Login"
                    onAction="#onBackToLogin"
                    maxWidth="150"/>
        </HBox>
    </top>

    <center>
    <VBox spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>


        <!-- TOP WINDOW -->
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="businessWindow"
                  spacing="10"
                  style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10;"
                  prefHeight="300">
                <Label text="Business Database Window"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </VBox>
        </ScrollPane>

        <!-- BOTTOM WINDOW -->
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox fx:id="reviewsWindow"
                  spacing="10"
                  style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10;"
                  prefHeight="300">
                <Label text="User Reviews Window"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </VBox>
        </ScrollPane>

    </VBox>
</center>

</BorderPane>