<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.transsafety.MainController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20;">
    
    <Label text="Transgender Safety and Aid Platform"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Button fx:id="connectButton"
            text="Connect to MongoDB"
            onAction="#connectToDatabase" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="collectionInput" promptText="Enter collection name" />
        <Button fx:id="createCollectionButton"
                text="Create Collection"
                onAction="#createCollection" />
    </HBox>

    <Label fx:id="statusLabel" text="Status..." style="-fx-text-fill: #444;" />
</VBox>